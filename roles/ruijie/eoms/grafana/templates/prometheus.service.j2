[Unit]
Description=Prometheus 
Wants=network-online.target
After=network-online.target
 
[Service]
User=root
Group=root
Type=simple
ExecStart={{ DATA_DIR }}/prometheus/prometheus --config.file={{ DATA_DIR }}/prometheus/prometheus.yml --web.read-timeout=5m  --web.max-connections=10
[Install]
WantedBy=multi-user.target
