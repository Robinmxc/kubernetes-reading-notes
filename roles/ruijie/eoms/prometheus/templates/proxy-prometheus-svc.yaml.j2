apiVersion: v1
kind: Endpoints
metadata:
  name: proxy-k8s
  namespace: kube-system
  labels:
    k8s-app: proxy
subsets:
- addresses:
{% for host in KUBE_MASTER_HOSTS %}
  - ip: {{ host }}     #kube-proxy节点IP(单节点只用写一个，集群需要把所有node节点+master节点的IP写上)
{% endfor %}
{% for host in KUBE_NODE_HOSTS %}
  - ip: {{ host }}     #kube-proxy节点IP(单节点只用写一个，集群需要把所有node节点+master节点的IP写上)
{% endfor %}

  ports:
  - name: port
    port: 10249
    protocol: TCP

---

apiVersion: v1
kind: Service
metadata:
  name: proxy-k8s
  namespace: kube-system
  annotations:
    prometheus.io/port: "10249"
    prometheus.io/scrape: "true"
  labels:
    k8s-app: proxy
spec:
  type: ClusterIP
  clusterIP: None
  ports:
  - name: port
    port: 10249
    protocol: TCP

