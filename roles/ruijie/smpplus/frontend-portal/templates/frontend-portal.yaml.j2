apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-{{ comp_name }}
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-{{ comp_name }}
spec:
  replicas: {{ deploy_conf.replicas }}
  selector:
    matchLabels:
      k8s-app: rg-{{ comp_name }}
  template:
    metadata:
      labels:
        k8s-app: rg-{{ comp_name }}
    spec:
      containers:
      - name: rg-{{ comp_name }}
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SMPPLUS_DOCKERS[comp_name].name }}:{{ SMPPLUS_DOCKERS[comp_name].version }}
        imagePullPolicy: IfNotPresent
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 80
        volumeMounts:
        - mountPath: /usr/share/nginx/html/portal/assets/config.js
          name: conf
          subPath: config.js
        - mountPath: /usr/share/nginx/html/portal/assets/plugin
          name: plugin
        - mountPath: /usr/share/nginx/html/portal/assets/img/visitor/pc/logo.png
          name: logo
          subPath: logo.png
        - mountPath: /usr/share/nginx/html/portal/assets/img/visitor/pc/logo-pc.png
          name: logo-pc
          subPath: logo-pc.png

      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}/conf
        - name: plugin
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}/plugin
        - name: logo
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}/img/visitor/pc/
        - name: logo-pc
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}/img/visitor/pc/

---
apiVersion: v1
kind: Service
metadata:
  name: rg-{{comp_name}}
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: rg-{{comp_name}}
  ports:
  - name: n81
    port: 81
    targetPort: 80
