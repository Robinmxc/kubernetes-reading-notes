apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rg-{{ comp_name }}
  namespace: {{ APP_NAMESPACE }}
spec:
  replicas: {{ deploy_conf.replicas }}
  template:
    metadata:
      labels:
        service: rg-{{ comp_name }}
    spec:
      containers:
      - name: rg-{{ comp_name }}
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SMPPLUS_DOCKERS[comp_name].name }}:{{ SMPPLUS_DOCKERS[comp_name].version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ JAVA_OPT_EXT}}"
        - name: JAVA_AUTHENTICATION_API_OPT_EXT
          value: "{{ JAVA_AUTHENTICATION_API_OPT_EXT}}"
        command:
        - '/bin/bash'
        - '-c'
        - 'java -jar -Dspring.config.location={{ config_base_dir }}/authentication-api/conf/ $JAVA_AUTHENTICATION_API_OPT_EXT /app/rg-authentication-api.jar'
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 9999
        - containerPort: 9688
        volumeMounts:
        - mountPath: /ruijie/{{comp_name}}
          name: conf
        - mountPath: /home/upload
          name: share
          readOnly: false
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}
        - name: share
          hostPath:
            path: {{ config_base_dir }}/share

---
apiVersion: v1
kind: Service
metadata:
  name: rg-{{comp_name}}
  namespace: {{ APP_NAMESPACE }}
spec:
  externalTrafficPolicy: Local
  selector:
    service: rg-{{comp_name}}
  type: NodePort
  ports:
  - port: 9999
    targetPort: 9999
    nodePort: 9999
  - port: 9688
    targetPort: 9688
    nodePort: 9688

