apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-{{ comp_name }}
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-{{ comp_name }}
spec:
  replicas: {{ deploy_conf.replicas }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  selector:
    matchLabels:
      k8s-app: rg-{{ comp_name }}
  template:
    metadata:
      labels:
        k8s-app: rg-{{ comp_name }}
    spec:
      containers:
      - name: rg-{{ comp_name }}
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SMPPLUS_DOCKERS[comp_name].name }}:{{ SMPPLUS_DOCKERS[comp_name].version }}
        imagePullPolicy: IfNotPresent
        env:
{% if ESCAPE["enable"] %}
        - name: ESCAPE_SERVICE_VIP
          value: "{{ ESCAPE.VIP }}"
{% endif %}
{% if k8s_single == "no" %}
        - name: CLUSTER_MODE
          value: "true"
        - name: SMPPLUS_SERVICE_VIP
          value: "{{ KUBE_MASTER_VIP }}"
        - name: SOCKET_PROXY_PORTS
          value: "1080"
{% endif %}
        - name: JAVA_OPT_EXT
          value: "{{ JAVA_OPT_EXT}}"
        ports:
        - containerPort: 9999
        - containerPort: 9688
        volumeMounts:
        - mountPath: /ruijie/{{comp_name}}
          name: conf
        - mountPath: /home/upload
          name: share
          readOnly: false
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        startupProbe:
          failureThreshold: 15
          httpGet:
            path: /liveProbe/aggregation
            port: 9999
            scheme: HTTP
          periodSeconds: 10
          successThreshold: 1
          timeoutSeconds: 1

        readinessProbe:
          failureThreshold: 3
          httpGet:
            path: /liveProbe/aggregation
            port: 9999
            scheme: HTTP
          periodSeconds: 5
          successThreshold: 1
          timeoutSeconds: 1

        livenessProbe:
          failureThreshold: 5
          httpGet:
            path: /liveProbe/aggregation
            port: 9999
            scheme: HTTP
          periodSeconds: 30
          successThreshold: 1
          timeoutSeconds: 1
      - name: rg-{{ comp_api_name }}
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SMPPLUS_DOCKERS[comp_api_name].name }}:{{ SMPPLUS_DOCKERS[comp_api_name].version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ JAVA_AUTHENTICATION_API_OPT_EXT }}"
        ports:
        - containerPort: 9887
        volumeMounts:
        - mountPath: /ruijie/{{comp_api_name}}
          name: api-conf

{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: 1
            memory: 2Gi
          requests:
            cpu: 500m
            memory: 1.5Gi
{% endif %}
      imagePullSecrets:
      - name: regsecret
      tolerations:
      - effect: NoExecute
        key: node.kubernetes.io/not-ready
        operator: Exists
        tolerationSeconds: {{tolerationSeconds}}
      - effect: NoExecute
        key: node.kubernetes.io/unreachable
        operator: Exists
        tolerationSeconds: {{tolerationSeconds}}
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}
        - name: share
          hostPath:
            path: {{ config_base_dir }}/share
        - name: api-conf
          hostPath:
            path: {{ config_base_dir }}/{{comp_api_name}}  

---
apiVersion: v1
kind: Service
metadata:
  name: rg-{{comp_name}}
  namespace: {{ APP_NAMESPACE }}
spec:
{% if k8s_single == "yes" %}
  externalTrafficPolicy: Local
{% endif %}
  selector:
    k8s-app: rg-{{comp_name}}
  type: NodePort
  ports:
  - port: 9999
    name: port9999
    targetPort: 9999
    nodePort: 9999
  - port: 9688
    name: port9688
    targetPort: 9688
    nodePort: 9688

---
apiVersion: v1
kind: Service
metadata:
  name: rg-{{comp_api_name}} 
  namespace: {{ APP_NAMESPACE }}
spec:
  #externalTrafficPolicy: Local
  selector:
    k8s-app: rg-{{comp_name}}
  ports:
  - port: 9887
    name: port9887
    targetPort: 9887
