apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rg-{{ comp_name }}
  namespace: {{ APP_NAMESPACE }}
spec:
  replicas: {{ deploy_conf.replicas }}
  template:
    metadata:
      labels:
        service: rg-{{ comp_name }}
    spec:
      nodeName: {{ eportal_node_ip }}
      hostNetwork: true
      hostAliases:
      - ip: "{{{ eportal_node_ip }}"
        hostnames:
        - "rg-{{ comp_name }}"
      containers:
      - name: rg-{{ comp_name }}
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SMPPLUS_DOCKERS[comp_name].name }}:{{ SMPPLUS_DOCKERS[comp_name].version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ JAVA_OPT_EXT}}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 8090
          hostPort: 8090
        - containerPort: 161
          protocol: UDP
          hostPort: 161
        - containerPort: 162
          protocol: UDP
          hostPort: 162
        - containerPort: 2000
          protocol: UDP
          hostPort: 2000
        - containerPort: 50100
          protocol: UDP
          hostPort: 50100
        volumeMounts:
        - mountPath: /ruijie/{{comp_name}}
          name: conf
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}

---
apiVersion: v1
kind: Service
metadata:
  name: rg-{{comp_name}}
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    service: rg-{{comp_name}}
  ports:
  - port: 8090
    name: port8090
    targetPort: 8090
  - protocol: UDP
    port: 161
    name: port161
    targetPort: 161
  - protocol: UDP
    port: 162
    name: port162
    targetPort: 162
  - protocol: UDP
    port: 50100
    name: port50100
    targetPort: 50100
  clusterIP: None