apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: rg-{{ comp_name }}
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-{{ comp_name }}
spec:
  replicas: {{ deploy_conf.replicas }}
  selector:
    matchLabels:
      k8s-app: rg-{{ comp_name }}
  serviceName: "rg-{{ comp_name }}"
  template:
    metadata:
      labels:
        k8s-app: rg-{{ comp_name }}
    spec:
      #hostNetwork: true
      dnsPolicy: ClusterFirstWithHostNet
      terminationGracePeriodSeconds: 0
      containers:
      - name: rg-{{ comp_name }}
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SMPPLUS_DOCKERS[comp_name].name }}:{{ SMPPLUS_DOCKERS[comp_name].version }}
        imagePullPolicy: IfNotPresent
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 1812
          protocol: UDP
        - containerPort: 1813
          protocol: UDP
        volumeMounts:
         - mountPath: /usr/local/var/log/radius
           name: log
         - mountPath: /ruijie/{{comp_name}}
           name: conf
         - mountPath: /usr/local/etc/raddb/certs/server.pem
           name: certs
           subPath: server.pem
         - mountPath: /usr/local/etc/raddb/mods-available/eap
           name: eap
           subPath: eap
        livenessProbe:
          exec:
            command:
            - "/bin/sh"
            - "-c"
            - 'echo "Message-Authenticator = 0x00, FreeRADIUS-Statistics-Type = 1, Response-Packet-Type = Access-Accept" | radclient -r 1 -x localhost:18121 status adminsecret'
          initialDelaySeconds: 10
          periodSeconds: 10
          failureThreshold: 5
      imagePullSecrets:
      - name: regsecret
      tolerations:
      - effect: NoExecute
        key: node.kubernetes.io/not-ready
        operator: Exists
        tolerationSeconds: {{tolerationSeconds}}
      - effect: NoExecute
        key: node.kubernetes.io/unreachable
        operator: Exists
        tolerationSeconds: {{tolerationSeconds}}
      volumes:
        - name: log
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}/log
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}
        - name: certs
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}/certs/
        - name: eap
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}/mods-available/

---
apiVersion: v1
kind: Service
metadata:
  name: rg-{{comp_name}}
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: rg-{{comp_name}}
  type: NodePort
  ports:
  - protocol: UDP
    port: 1812
    name: port1812
    targetPort: 1812
    nodePort: 1812
  - protocol: UDP
    port: 1813
    name: port1813
    targetPort: 1813
    nodePort: 1813
