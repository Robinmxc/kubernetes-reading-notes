apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ pcapture_node_name }}
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: {{ pcapture_node_name }}
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  replicas: {{ deploy_conf.replicas }}
  selector:
    matchLabels:
      k8s-app: {{ pcapture_node_name }}
  template:
    metadata:
      labels:
        k8s-app: {{ pcapture_node_name }}
    spec:
      hostNetwork: true
      containers:
      - name: rg-pcapture
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SMPPLUS_DOCKERS["pcapture"].name }}:{{ SMPPLUS_DOCKERS["pcapture"].version }}
        imagePullPolicy: IfNotPresent
        env:
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 10088
        volumeMounts:
        - mountPath: /ruijie/smpplus/pcapture/conf
          name: conf
        - mountPath: /logs
          name: logpath

{%if HEALTH_CHECK["enable"] and (HEALTH_CHECK["pcapture"] is not defined or HEALTH_CHECK["pcapture"])  %}
        startupProbe:
          failureThreshold: 20
          httpGet:
            path: /pcapture/liveProbe
            port: 10088
            scheme: HTTP
          periodSeconds: 5
          successThreshold: 1
          timeoutSeconds: 1

        readinessProbe:
          failureThreshold: 3
          httpGet:
            path: /pcapture/liveProbe
            port: 10088
            scheme: HTTP
          periodSeconds: 5
          successThreshold: 1
          timeoutSeconds: 1

        livenessProbe:
          failureThreshold: 5
          httpGet:
            path: /pcapture/liveProbe
            port: 10088
            scheme: HTTP
          periodSeconds: 30
          successThreshold: 1
          timeoutSeconds: 1
{% endif %}

      imagePullSecrets:
      - name: regsecret
      tolerations:
      - effect: NoExecute
        key: node.kubernetes.io/not-ready
        operator: Exists
        tolerationSeconds: {{tolerationSeconds}}
      - effect: NoExecute
        key: node.kubernetes.io/unreachable
        operator: Exists
        tolerationSeconds: {{tolerationSeconds}}
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/{{comp_name}}/conf
        - name: logpath
          hostPath:
            path: {{ config_base_dir }}/logs

---
apiVersion: v1
kind: Service
metadata:
  name: {{ pcapture_node_name }}
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: {{ pcapture_node_name }}
  ports:
  - port: 10088
    targetPort: 10088
