[Unit]
Description=kadapi service

[Service]
Type=simple
User=root
PIDFile=/etc/kad/api/pid.pid
WorkingDirectory=/etc/kad/api
ExecStart=/etc/kad/api/kadapi
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s QUIT $MAINPID
Restart=always
RestartSec=5
StartLimitInterval=0
Environment="PATH=/opt/kube/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/root/bin:/usr/local/openssh/bin"

[Install]
WantedBy=multi-user.target
                       