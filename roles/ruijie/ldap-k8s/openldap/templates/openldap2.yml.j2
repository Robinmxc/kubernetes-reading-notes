kind: StatefulSet
apiVersion: apps/v1
metadata:
  name: openldap2
  namespace: {{ APP_NAMESPACE }}
  labels:
    app: openldap2
spec:
  serviceName: openldap2
  replicas: 1
  selector:
    matchLabels:
      app: openldap2
  template:
    metadata:
      labels:
        app: openldap2
    spec:
      nodeName: {{ ldap_node_ip }}
      hostNetwork: true
      containers:
        - name: openldap2
          image: sourceid/openldap:{{ ldap_version }}
          imagePullPolicy: IfNotPresent
          args:
            - '--copy-service'
          env:
            - name: LDAP_DOMAIN
              value: '{{ LDAP.LDAP_DOMAIN }}'
            - name: LDAP_ORGANISATION
              value: '{{ LDAP.LDAP_ORGANISATION }}'
            - name: LDAP_ADMIN_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: ldap-pwds
                  key: admin
            - name: LDAP_CONFIG_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: ldap-pwds
                  key: admin
            - name: LDAP_READONLY_USER_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: ldap-pwds
                  key: readonly
            - name: LDAP_REPLICATION
              value: 'own'
          volumeMounts:
            - name: ldap-config
              mountPath: /etc/ldap/slapd.d
            - name: ldap-data
              mountPath: /var/lib/ldap
            - name: ldap-certs
              mountPath: /container/service/slapd/assets/certs
            - name: ldap-schema
              mountPath: /container/service/slapd/assets/config/bootstrap/ldif/custom
          ports:
            - name: tcp-{{ LDAP_STORAGE_PORT }}
              containerPort: {{ LDAP_STORAGE_PORT }}
              protocol: TCP
            - name: tcp-{{ LDAPS_STORAGE_PORT }}
              containerPort: {{ LDAPS_STORAGE_PORT }}
              protocol: TCP
          resources:
            limits:
              cpu: {{ ldap_deploy_conf.resources.limits.cpu }}
              memory: {{ ldap_deploy_conf.resources.limits.memory }}
            requests:
              cpu: {{ ldap_deploy_conf.resources.requests.cpu }}
              memory: {{ ldap_deploy_conf.resources.requests.memory }}
      imagePullSecrets:
        - name: regsecret
      volumes:
        - name: ldap-schema
          hostPath:
            path: {{ ldap_base_dir }}/schema
        - name: ldap-config
          hostPath:
            path: {{ ldap_base_dir }}/conf
        - name: ldap-data
          hostPath:
            path: {{ ldap_base_dir }}/data
        - name: ldap-certs
          hostPath:
            path: {{ ldap_base_dir }}/certs
