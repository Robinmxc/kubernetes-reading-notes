apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rg-convert
  namespace: {{ APP_NAMESPACE }}
spec:
  replicas: {{ deploy_conf.replicas }}
  template:
    metadata:
      labels:
        service: rg-convert
    spec:
      containers:
      - name: rg-convert
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS['convert'].name }}:{{ SOURCEID_DOCKERS['convert'].version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ convert_java_opt }}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 8080
        volumeMounts:
        - mountPath: /ruijie/sourceid/convert/conf
          name: conf
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/sourceid/convert/conf

---
apiVersion: v1
kind: Service
metadata:
  name: rg-convert
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    service: rg-convert
  ports:
  - port: 80
    targetPort: 8080
