apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-gate
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-gate
spec:
  replicas: {{ deploy_conf.replicas }}
  selector:
    matchLabels:
      k8s-app: rg-gate
  template:
    metadata:
      labels:
        k8s-app: rg-gate
    spec:
{% if "" != SOURCEID_SSO_HOST_ALIAS and "offload" != SOURCEID_HTTPS_MODE %}
      hostAliases:
      - ip: "{{ SOURCEID_SSO_HOST_ALIAS }}"
        hostnames:
        - "{{ SOURCEID_SSO_DOMAIN }}"
{% endif %}
      containers:
      - name: rg-gate
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS.gate.name }}:{{ SOURCEID_DOCKERS.gate.version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ gate_java_opt }}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 80
        volumeMounts:
        - mountPath: /ruijie/sourceid/gate/conf
          name: conf
        - mountPath: /logs
          name: logpath
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/sourceid/gate/conf
        - name: logpath
          hostPath:
            path: {{ config_base_dir }}/logs
---
apiVersion: v1
kind: Service
metadata:
  name: rg-gate
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: rg-gate
  ports:
  - port: 80
    targetPort: 80

---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: rg-gate-ingress
  namespace: {{ APP_NAMESPACE }}
spec:
  entryPoints:
{% if 'https' == traefik_mode %}
    - websecure
{% else %}
    - web
{% endif %}
  routes:
    - match: Host(`{{ SOURCEID_GATE_DOMAIN }}`) && PathPrefix(`/`)
      kind: Rule
      services:
        - name: rg-gate
          port: 80
    - match: Host(`{{ SOURCEID_GATE_DOMAIN }}`) && PathPrefix(`/data-sync/v2/api-docs`)
      kind: Rule
      services:
        - name: rg-frontend
          port: 80

    - match: Host(`{{ SOURCEID_GATE_DOMAIN }}`) && PathPrefix(`/component/v2/api-docs`)
      kind: Rule
      services:
        - name: rg-frontend
          port: 80

    - match: Host(`{{ SOURCEID_GATE_DOMAIN }}`) && PathPrefix(`/faceid/v2/api-docs`)
      kind: Rule
      services:
        - name: rg-frontend
          port: 80

    - match: Host(`{{ SOURCEID_GATE_DOMAIN }}`) && PathPrefix(`/import/v2/api-docs`)
      kind: Rule
      services:
        - name: rg-frontend
          port: 80

    - match: Host(`{{ SOURCEID_GATE_DOMAIN }}`) && PathPrefix(`/linkid/v2/api-docs`)
      kind: Rule
      services:
        - name: rg-frontend
          port: 80

{% if "yes" == SOURCEID_FGM_VERSION_ENABLED %}
    - match: Host(`{{ SOURCEID_GATE_DOMAIN }}`) && PathPrefix(`/linkid/api/ztfgm`)
      kind: Rule
      services:
        - name: rg-linkid
          port: 80
{% endif %}

{% if 'https' == traefik_mode %}
  tls:
    store:
      name: default
      namespace: ruijie-sourceid
{% endif %}
