apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-sso-proxy
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-sso-proxy
spec:
  replicas: {{ deploy_conf.replicas }}
  strategy:
      type: RollingUpdate
      rollingUpdate:
        maxSurge: 1
        maxUnavailable: 0
  selector:
    matchLabels:
      k8s-app: rg-sso-proxy
  template:
    metadata:
      labels:
        k8s-app: rg-sso-proxy
    spec:
{%if SKYWALKING["enable"] %}
      initContainers:
      - name: init-agent
        image: {{ PRIVATE_INSECURE_REGISTRY }}/sourceid/skywalking:{{ SKYWALKING.IMAGE_VERSION }}
        command:
        - 'sh'
        - '-c'
        - 'set -ex;mkdir -p /skywalking/agent;cp -r /opt/skywalking/agent/* /skywalking/agent;'
        volumeMounts:
        - name: agent
          mountPath: /skywalking/agent
{% endif %}
      containers:
      - name: rg-sso-proxy
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS["sso-proxy"].name }}:{{ SOURCEID_DOCKERS["sso-proxy"].version }}
        imagePullPolicy: IfNotPresent
        env:
{%if SKYWALKING["enable"] %}
        - name: JAVA_AGENT_EXT
          value: {{ SKYWALKING.JAVA_AGENT_EXT }}
        - name: SW_AGENT_NAME
          value: {{ SKYWALKING.AGENT_PREFIX }}-sso-proxy
        - name: SW_AGENT_NAMESPACE
          value: {{ SKYWALKING.NAMESPACE }}
        - name: SW_GRPC_LOG_SERVER_HOST
          value: {{ SKYWALKING.SERVER_HOST }}
        - name: SW_AGENT_COLLECTOR_BACKEND_SERVICES
          value: {{ SKYWALKING.SERVER_HOST }}:11800          
{% endif %}
        - name: JAVA_OPT_EXT
          value: "{{ sso_proxy_java_opt }}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 8081
        volumeMounts:
            - mountPath: /etc/cas
              name: etc
            - mountPath: /build
              name: build
            - mountPath: /cas
              name: cas
            - mountPath: /ruijie/sourceid/sso-proxy/conf
              name: conf
            - mountPath: /logs
              name: logpath
            - mountPath: /skywalking/agent
              name: agent

{%if HEALTH_CHECK["enable"] and (HEALTH_CHECK["sso-proxy"] is not defined or HEALTH_CHECK["sso-proxy"]) %}
        startupProbe:
          failureThreshold: 20
          httpGet:
            path: /liveProbe
            port: 8081
            scheme: HTTP
          periodSeconds: 5
          successThreshold: 1
          timeoutSeconds: 1

        readinessProbe:
          failureThreshold: 3
          httpGet:
            path: /liveProbe
            port: 8081
            scheme: HTTP
          periodSeconds: 5
          successThreshold: 1
          timeoutSeconds: 1
          
        livenessProbe:
          failureThreshold: 5
          httpGet:
            path: /liveProbe
            port: 8081
            scheme: HTTP
          periodSeconds: 30
          successThreshold: 1
          timeoutSeconds: 1
{% endif %}

      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/sourceid/sso-proxy/conf
        - name: logpath
          hostPath:
            path: {{ config_base_dir }}/logs
        - name: agent
          emptyDir: {}

---
apiVersion: v1
kind: Service
metadata:
  name: rg-sso-proxy
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: rg-sso-proxy
  ports:
  - port: 80
    targetPort: 8081

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: rg-sso-proxy-ingress
  namespace: {{ APP_NAMESPACE }}
spec:
  ingressClassName: nginx
{% if 'https' == ssoproxy_ingress_mode %}
  tls:
    - hosts:
      - {{ SOURCEID_SSO_PROXY_DOMAIN }}
      secretName: nginx-cert
{% endif %}
  rules:
  - host: {{ SOURCEID_SSO_PROXY_DOMAIN }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: rg-sso-proxy
            port:
              number: 8081