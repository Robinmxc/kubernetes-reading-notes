apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-internetid
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-internetid
spec:
  replicas: 1
  selector:
    matchLabels:
      k8s-app: rg-internetid
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        k8s-app: rg-internetid
    spec:
      containers:
      - name: rg-internetid
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS.internetid.name }}:{{ SOURCEID_DOCKERS.internetid.version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ internetid_java_opt }}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 8902
          protocol: TCP
        volumeMounts:
        - mountPath: /ruijie/sourceid/internetid/conf
          name: conf
        - mountPath: /logs
          name: logpath
      dnsPolicy: ClusterFirst
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/sourceid/internetid/conf        
        - name: logpath
          hostPath:
            path: {{ config_base_dir }}/logs

---
apiVersion: v1
kind: Service
metadata:
  name: rg-internetid
  namespace: ruijie-sourceid
spec:
  selector:
    k8s-app: rg-internetid
  ports:
  - port: 80
    protocol: TCP
    targetPort: 8902
  

