#!/bin/bash


sed -i "s!#host_key_checking.*!host_key_checking = False!g"    /etc/ansible/ansible.cfg

need=$( cat /etc/ansible/hosts | grep MGOBSFTPHOSTS | wc -l )
if [ "${need}" == "0" ]; then
sed -i '$a\[MGOBSFTPHOSTS]' /etc/ansible/hosts
sed -i '$a\{{ MGOB.MGOB_SFTP_HOSTS }}' /etc/ansible/hosts
fi




sshpass -p {{ MGOB.MGOB_SFTP_PWD }} ansible  -k MGOBSFTPHOSTS  -m copy -a "src={{ yaml_dir }}/mgob/cronroot dest=/var/spool/cron/root"
sshpass -p {{ MGOB.MGOB_SFTP_PWD }} ansible  -k MGOBSFTPHOSTS  -m copy -a "src={{ yaml_dir }}/mgob/cleanmongob.sh dest=/home/"
