apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-faceid-display
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-faceid-display
spec:
  replicas: {{ deploy_conf.replicas }}
  template:
    metadata:
      labels:
        k8s-app: rg-faceid-display
    spec:
      containers:
      - name: rg-faceid-display
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS["faceid-display"].name }}:{{ SOURCEID_DOCKERS["faceid-display"].version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ faceid_display_java_opt }}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 8902
        volumeMounts:
        - mountPath: /ruijie/sourceid/faceid-display/conf
          name: conf
        - mountPath: /logs
          name: logpath
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/sourceid/faceid-display/conf
        - name: logpath
          hostPath:
            path: {{ config_base_dir }}/logs
---
apiVersion: v1
kind: Service
metadata:
  name: rg-faceid-display
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: rg-faceid-display
  ports:
  - port: 80
    targetPort: 8902

---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: rg-faceid-ingress
  namespace: {{ APP_NAMESPACE }}
spec:
  entryPoints:
{% if 'https' == traefik_mode %}
    - websecure
{% else %}
    - web
{% endif %}
  routes:
    - match: Host(`{{ SOURCEID_GATE_DOMAIN }}`) && PathPrefix(`/group1`)
      kind: Rule
      services:
        - name: rg-faceid-display
          port: 80

{% if 'https' == traefik_mode %}
  tls:
    store:
      name: default
      namespace: ruijie-sourceid
{% endif %}