apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-faceid-display
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-faceid-display
spec:
  replicas: {{ deploy_conf.replicas }}
  selector:
    matchLabels:
      k8s-app: rg-faceid-display
  template:
    metadata:
      labels:
        k8s-app: rg-faceid-display
    spec:
{%if SKYWALKING["enable"] %}
      initContainers:
      - name: init-agent
        image: {{ PRIVATE_INSECURE_REGISTRY }}/sourceid/skywalking:{{ SKYWALKING.IMAGE_VERSION }}
        command:
        - 'sh'
        - '-c'
        - 'set -ex;mkdir -p /skywalking/agent;cp -r /opt/skywalking/agent/* /skywalking/agent;'
        volumeMounts:
        - name: agent
          mountPath: /skywalking/agent
{% endif %}
      containers:
      - name: rg-faceid-display
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS["faceid-display"].name }}:{{ SOURCEID_DOCKERS["faceid-display"].version }}
{%if SKYWALKING["enable"] %}
        command:
        - 'sh'
        - '-c'
        - 'java -javaagent:/skywalking/agent/skywalking-agent.jar -jar -Dspring.config.location=/ruijie/sourceid/faceid-display/conf/ -Dlogging.config=/ruijie/sourceid/faceid-display/conf/logback.xml -Xmx4096m -Xms4096m $JAVA_OPT_EXT /app/rg-faceid-dispaly-0.0.1-SNAPSHOT.jar'
{% endif %}
        imagePullPolicy: IfNotPresent
        env:
{%if SKYWALKING["enable"] %}
        - name: SW_AGENT_NAME
          value: SourceID-faceid-display
        - name: SW_AGENT_NAMESPACE
          value: {{ SKYWALKING.NAMESPACE }}
        - name: SW_GRPC_LOG_SERVER_HOST
          value: {{ SKYWALKING.SERVER_HOST }}
        - name: SW_AGENT_COLLECTOR_BACKEND_SERVICES
          value: {{ SKYWALKING.SERVER_HOST }}:11800          
{% endif %}
        - name: JAVA_OPT_EXT
          value: "{{ faceid_display_java_opt }}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 8902
        volumeMounts:
        - mountPath: /ruijie/sourceid/faceid-display/conf
          name: conf
        - mountPath: /logs
          name: logpath
        - mountPath: /skywalking/agent
          name: agent
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/sourceid/faceid-display/conf
        - name: logpath
          hostPath:
            path: {{ config_base_dir }}/logs
        - name: agent
          emptyDir: {}

---
apiVersion: v1
kind: Service
metadata:
  name: rg-faceid-display
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: rg-faceid-display
  ports:
  - port: 80
    targetPort: 8902

---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: rg-faceid-ingress
  namespace: {{ APP_NAMESPACE }}
spec:
{% if 'https' == ingress_mode %}
  tls:
    - hosts:
      - {{ SOURCEID_GATE_DOMAIN }}
      secretName: nginx-cert
{% endif %}
  rules:
    - host: {{ SOURCEID_GATE_DOMAIN }}
      http:
        paths:
        - path: /group1
          backend:
            serviceName: rg-faceid-display
            servicePort: 80
