apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rg-component
  namespace: {{ APP_NAMESPACE }}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        service: rg-component
    spec:
      containers:
      - name: rg-component
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS.component.name }}:{{ SOURCEID_DOCKERS.component.version }}
        env:
        - name: JAVA_OPT_EXT
          value: "{{ component_java_opt }}"
        imagePullPolicy: IfNotPresent
{% if "yes" == component_resource_limit %}
        resources:
          limits:
            cpu: 2
            memory: 3Gi
          requests:
            cpu: 1
            memory: 2Gi
{% endif %}
        ports:
        - containerPort: 8080
        volumeMounts:
        - mountPath: /ruijie/component/conf
          name: conf
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/component/conf

---
apiVersion: v1
kind: Service
metadata:
  name: rg-component
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    service: rg-component
  ports:
  - port: 80
    targetPort: 8080
