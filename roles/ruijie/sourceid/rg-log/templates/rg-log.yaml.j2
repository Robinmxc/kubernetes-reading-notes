apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-log
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-log
spec:
  replicas: {{ deploy_conf.replicas }}
  template:
    metadata:
      labels:
        k8s-app: rg-log
    spec:
      containers:
      - name: rg-log
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS["rg-log"].name }}:{{ SOURCEID_DOCKERS["rg-log"].version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ rg-log_display_java_opt }}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 8908
        volumeMounts:
        - mountPath: /ruijie/sourceid/rg-log/conf
          name: conf
        - mountPath: /logs
          name: logpath
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/sourceid/rg-log/conf
        - name: logpath
          hostPath:
            path: {{ config_base_dir }}/logs
---
apiVersion: v1
kind: Service
metadata:
  name: rg-log
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: rg-log
  ports:
  - port: 80
    targetPort: 8908
