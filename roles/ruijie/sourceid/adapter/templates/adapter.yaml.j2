apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-adapter
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-adapter
spec:
  replicas: {{ deploy_conf.replicas }}
  selector:
    matchLabels:
      k8s-app: rg-adapter
  template:
    metadata:
      labels:
        k8s-app: rg-adapter
    spec:
      containers:
      - name: rg-adapter
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS.adapter.name }}:{{ SOURCEID_DOCKERS.adapter.version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ adapter_java_opt }}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 80
        volumeMounts:
        - mountPath: /ruijie/sourceid/adapter/conf
          name: conf
        - mountPath: /logs
          name: logpath
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/sourceid/adapter/conf
        - name: logpath
          hostPath:
            path: {{ config_base_dir }}/logs

---
apiVersion: v1
kind: Service
metadata:
  name: rg-adapter
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: rg-adapter
  ports:
  - port: 80
    targetPort: 80

---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: rg-adapter-ingress
  namespace: {{ APP_NAMESPACE }}
spec:
{% if 'https' == ingress_mode %}
  tls:
    - hosts:
      - {{ SOURCEID_ADAPTER_DOMAIN }}
      secretName: traefik-cert
{% endif %}
  rules:
    - host: {{ SOURCEID_ADAPTER_DOMAIN }}
      http:
        paths:
        - path: /sync
          backend:
            serviceName: rg-adapter
            servicePort: 80
