global_defs {
    router_id gateway-{{ hostvars[inventory_hostname]["HOST_ID"] }}
}

vrrp_script chk_gateway {
    script "/etc/keepalived/gateway_check.sh"
    interval 2
    weight -20
}

vrrp_instance VI-fdfs-storage {
    state hostvars[inventory_hostname]["KEEPALIVED_ROLE"]
    priority {% if "MASTER" == hostvars[inventory_hostname]["KEEPALIVED_ROLE"] %}100{% else %}{{ 99 | random(61, 1) }}{% endif %}
    nopreempt
    unicast_src_ip {{ inventory_hostname }}
    unicast_peer {
{% for h in groups['gateway'] %}{% if h != inventory_hostname %}
        {{ h }}
{% endif %}{% endfor %}
    }
    interface {{ GATEWAY_ACCESS_IF }}
    virtual_router_id {{ GATEWAY_ROUTER_ID }}
    advert_int 1
    track_script {
        chk_gateway
    }
    virtual_ipaddress {
        {{ SOURCEID_GATEWAY_VIP }}
    }
}

virtual_server {{ SOURCEID_GATEWAY_VIP }} {{ GATEWAY_PORT }} {
    delay_loop 6
    lb_algo rr
    lb_kind DR
    persistence_timeout 50
    protocol TCP

{% for h in groups['gateway'] %}
    real_server {{ h }} {{ GATEWAY_PORT }} {
        weight 1
        TCP_CHECK {
            connect_port {{ GATEWAY_PORT }}
            connect_timeout 3
            nb_get_retry 3
            delay_before_retry 3
        }
    }
{% endfor %}
}
