apiVersion: apps/v1
kind: Deployment
metadata:
  name: rg-data-sync
  namespace: {{ APP_NAMESPACE }}
  labels:
    k8s-app: rg-data-sync
spec:
  replicas: {{ deploy_conf.replicas }}
  selector:
    matchLabels:
      k8s-app: rg-data-sync
  template:
    metadata:
      labels:
        k8s-app: rg-data-sync
    spec:
      containers:
      - name: rg-data-sync
        image: {{ PRIVATE_INSECURE_REGISTRY }}/{{ SOURCEID_DOCKERS['data-sync'].name }}:{{ SOURCEID_DOCKERS['data-sync'].version }}
        imagePullPolicy: IfNotPresent
        env:
        - name: JAVA_OPT_EXT
          value: "{{ data_sync_java_opt }}"
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
        - containerPort: 8080
        volumeMounts:
        - mountPath: /ruijie/sourceid/data-sync/conf
          name: conf
        - mountPath: /logs
          name: logpath
      imagePullSecrets:
      - name: regsecret
      volumes:
        - name: conf
          hostPath:
            path: {{ config_base_dir }}/sourceid/data-sync/conf
        - name: logpath
          hostPath:
            path: {{ config_base_dir }}/logs

---
apiVersion: v1
kind: Service
metadata:
  name: rg-data-sync
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    k8s-app: rg-data-sync
  ports:
  - port: 80
    targetPort: 8080
