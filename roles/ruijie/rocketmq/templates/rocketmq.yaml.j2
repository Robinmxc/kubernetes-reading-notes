apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rg-rocket
  namespace: {{ APP_NAMESPACE }}
spec:
  replicas: 1
  template:
    metadata:
     labels:
       service: rg-rocket
    spec:
      nodeName: {{ rocketmq_node_ip }}
      containers:
      - name: broker
        image: rocketmqinc/rocketmq:{{ rocketmq_version }}
        command: ["sh","mqbroker", "-n","localhost:9876 autoCreateTopicEnable=true"]
        env:
        - name: JAVA_OPT_EXT
          value: "{{ mq_broker_java_opt }}"
        imagePullPolicy: IfNotPresent
{% if "dict" == (deploy_conf.resources | type_debug) %}
        resources:
          limits:
            cpu: {{ deploy_conf.resources.limits.cpu }}
            memory: {{ deploy_conf.resources.limits.memory }}
          requests:
            cpu: {{ deploy_conf.resources.requests.cpu }}
            memory: {{ deploy_conf.resources.requests.memory }}
{% endif %}
        ports:
          - containerPort: 10909
          - containerPort: 10911
        volumeMounts:
          - mountPath: /root/logs/broker
            name: brokeroptlogs
          - mountPath: /root/store/broker
            name: brokeroptstore
      - name: namesrv
        image: rocketmqinc/rocketmq:{{ rocketmq_version }}
        command: ["sh","mqnamesrv"]
        env:
        - name: JAVA_OPT_EXT
          value: "{{ mq_server_java_opt }}"
        imagePullPolicy: IfNotPresent
        ports:
          - containerPort: 9876
        volumeMounts:
          - mountPath: /root/logs/namesrv
            name: namesrvoptlogs
          - mountPath: /root/store/namesrv
            name: namesrvoptstore
      volumes:
      - name: brokeroptlogs
        hostPath:
          path: {{ rocketmq_logs_dir }}/broker
      - name: brokeroptstore
        hostPath:
          path: {{ rocketmq_data_dir }}/broker
      - name: namesrvoptlogs
        hostPath:
          path: {{ rocketmq_logs_dir }}/namesrv
      - name: namesrvoptstore
        hostPath:
          path: {{ rocketmq_data_dir }}/namesrv

---
apiVersion: v1
kind: Service
metadata:
  name: rg-rocket
  namespace: {{ APP_NAMESPACE }}
spec:
  selector:
    service: rg-rocket
  ports:
  - port: 9876
    targetPort: 9876
